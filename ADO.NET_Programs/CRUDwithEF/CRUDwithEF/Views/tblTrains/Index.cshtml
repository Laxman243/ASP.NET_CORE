@model IEnumerable<CRUDwithEF.tblTrain>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrainNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.TrainNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TrainNo })
            </td>
        </tr>
    }

</table>
